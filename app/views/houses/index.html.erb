<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Purchase date</th>
      <th>State</th>
      <th>Street address</th>
      <th>Zip code</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.city %></td>
        <td><%= house.purchase_date %></td>
        <td><%= house.state %></td>
        <td><%= house.street_address %></td>
        <td><%= house.zip_code %></td>
        <td><%= house.owner_id %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

